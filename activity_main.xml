<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="8pt"
        android:text="Currency to be converted"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="2in"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:textSize="8pt"
        android:background="@color/purple_500"
        android:textColor="@color/black"
        android:text=" "/>

    <TextView
        android:id="@+id/textView2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="From Currency:"
        android:textSize="8pt" />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="1.5in"
        android:layout_height="5pt"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@android:drawable/btn_dropdown"
        tools:ignore="InvalidId" />
    <TextView
        android:id="@+id/textView3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="To Currency:"
        android:textSize="8pt" />
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="1.5in"
        android:layout_height="5pt"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@android:drawable/btn_dropdown"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="1in"
        android:layout_height="2pt"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="2pt"
        android:onClick="equalEvent"
        android:text="convert"
        android:inputType="textPersonName"
        android:backgroundTint="@color/purple_700"
        android:textColor="@color/black"
        android:textStyle="bold"
         />
    <EditText
        android:id="@+id/textView4"
        android:layout_height="wrap_content"
        android:layout_width="2in"
        android:layout_weight="1"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Amount : "
        android:textColor="@color/black"
        android:layout_marginBottom="8pt"
         />



</LinearLayout>